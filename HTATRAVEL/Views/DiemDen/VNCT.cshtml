
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("_HeaderCT")

<section class="probootstrap-cover overflow-hidden relative" style="background-image: url('/assets/images/bg_1.jpg');" data-stellar-background-ratio="0.5" id="section-home">
    <div class="overlay"></div>
    <div class="container">
        <div class="row align-items-center text-center">
            <div class="col-md">
                <h2 class="heading mb-2 display-4 font-light probootstrap-animate">Khám phá những địa điểm du lịch<br /><br /> nổi tiếng trong nước và quốc tế</h2>

            </div>
        </div>

    </div>
</section>
<div ng-app="HTATravelApp" ng-controller="ChiTietCtrl">

    <div ng-init="LoadVNCT(@ViewBag.MaVN)"></div>
    <div ng-init="LoadXemNhieu()"></div>
    <div ng-init="LoadXemNhieuQT()"></div>
    <div class="probootstrap_section">
        <div class="container">
            <div class="row text-center mb-5 probootstrap-animate">
                <div class="col-md-12">
                    <h2 class="h2 display-4 border-bottom probootstrap-section-heading" style="line-height: 50px">{{VNCT.TenVN}}</h2>
                </div>
            </div>

            <div class="row probootstrap-animate">
                <div class="col-md-12 mb-4">
                    <div class="col-md-12 mb-4">

                        <a class="albuml col-md-6" href="{{VNCT.Anh1}}"><img style="height: 100%" src="{{VNCT.Anh1}}" /></a>

                        <a class="albumr col-md-3 mb-2" href="{{VNCT.Anh2}}"><img style=" height: 100%" src="{{VNCT.Anh2}}" /></a>

                        <a class="albumr col-md-3 mb-2" href="{{VNCT.Anh3}}"><img style=" height: 100%" src="{{VNCT.Anh3}}" /></a>

                        <a class="albumr col-md-3 mb-2" href="{{VNCT.Anh4}}"><img style=" height: 100%" src="{{VNCT.Anh4}}" /></a>

                        <a class="albumr col-md-3 mb-1" href="{{VNCT.Anh5}}"><img style=" height: 100%" src="{{VNCT.Anh5}}" /></a>


                    </div>
                </div>


                <div class="col-md-12 mb-4">
                    <div class="chitiet col-md-8 mb-4">
                        <h3 class="h3">CHƯƠNG TRÌNH TOUR</h3>
                        <a href="{{VNCT.Anh4}}"><img style="height: 100%" src="{{VNCT.Anh4}}" /></a>
                        {{VNCT.Chuongtrinh}}
                        <a href="{{VNCT.Anh2}}"><img style="height: 100%" src="{{VNCT.Anh2}}" /></a>
                    </div>

                    <div class="tourdltop col-md-4 mb-4">
                        <h3 class="h3">TOUR DU LỊCH NỔI BẬT</h3>
                        <div ng-repeat="a in listXemNhieu | limitTo: 4" class="tourdltopmr">
                            <a href="/DiemDen/VNCT/?MaVN={{a.MaVN}}">
                                <img src="{{a.Anh1}}">
                            </a>
                            <a href="/DiemDen/VNCT/?MaVN={{a.MaVN}}">
                                <p>{{a.TenVN}}</p>
                            </a>
                            <h4><b>{{a.Giasale | currency: "đ":false}}</b></h4>
                            <h6><b>{{a.Giagoc | currency: "đ":false}}</b></h6>
                        </div>
                        <div ng-repeat="a in listXemNhieuQT | limitTo: 3" class="tourdltopmr">
                            <a href="/DiemDen/QTCT/?MaQT={{a.MaQT}}">
                                <img src="{{a.Anh1}}">
                            </a>
                            <a href="/DiemDen/QTCT/?MaQT={{a.MaQT}}">
                                <p>{{a.TenQT}}</p>
                            </a>
                            <h4><b>{{a.Giasale | currency: "đ":false}}</b></h4>
                            <h6><b>{{a.Giagoc | currency: "đ":false}}</b></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>