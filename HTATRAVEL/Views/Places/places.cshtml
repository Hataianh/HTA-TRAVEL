
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("_HeaderPlaces")


<section class="probootstrap-cover overflow-hidden relative" style="background-image: url('/assets/images/bg_1.jpg');" data-stellar-background-ratio="0.5" id="section-home">
    <div class="overlay"></div>
    <div class="container">
        <div class="row align-items-center text-center">
            <div class="col-md">
                <h2 class="heading mb-2 display-4 font-light probootstrap-animate">Khám phá những địa điểm du lịch<br /><br /> nổi tiếng trong nước và quốc tế</h2>

            </div>
        </div>
    </div>

</section>
<!-- END section -->

<div ng-app="HTATravelApp" ng-controller="PlacesCtrl">

    <div ng-init="LoadTourVN()"></div>
    <div ng-init="LoadTourQT()"></div>
    <section class="probootstrap_section">
        <div class="container">
            <div class="row text-center mb-5 probootstrap-animate">
                <div class="col-md-12">
                    <h2 class="display-4 border-bottom probootstrap-section-heading">Điểm đến trong nước</h2>
                </div>
            </div>


            <div class="row probootstrap-animate">
                <div class="col-md-12 mb-4">
                    <div class="owl-carousel js-owl-carousel-2">
                        <div ng-repeat="a in listTourVN" class="tour">
                            <div class="media probootstrap-media d-block align-items-stretch mb-4 probootstrap-animate">
                                <a href="/DiemDen/VNCT/?MaVN={{a.MaVN}}"><img src="{{a.Anh1}}" class="img-fluid"></a>

                                    <div class="text" title="{{a.TenVN}}"><a href="/DiemDen/VNCT/?MaVN={{a.MaVN}}">Khám phá</a></div>
                                
                                <div class="media-body">
                                    <h5 class="mb-3 tentour"><a href="/DiemDen/VNCT/?MaVN={{a.MaVN}}" title="{{a.TenVN}}">{{a.TenVN}}</a></h5>
                                    <hr />
                                    <h3><b>{{a.Giasale | currency: "đ":false}}</b></h3>
                                    <h5 class="giagoc"><b>{{a.Giagoc | currency: "đ":false}}</b></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="probootstrap_section bg-light">
        <div class="container">
            <div class="row text-center mb-5 probootstrap-animate">
                <div class="col-md-12 mb-4">
                    <h2 class="display-4 border-bottom probootstrap-section-heading">Điểm đến quốc tế</h2>
                </div>
            </div>

            <div class="row probootstrap-animate">
                <div class="col-md-12" >
                    <div class="owl-carousel js-owl-carousel-2">
                        <div ng-repeat="a in listTourQT" class="tour">
                            <div class="media probootstrap-media d-block align-items-stretch mb-4 probootstrap-animate">
                                <a href="/DiemDen/QTCT/?MaQT={{a.MaQT}}"><img src="{{a.Anh1}}" class="img-fluid"></a>

                                <div class="text" title="{{a.TenQT}}"><a href="/DiemDen/QTCT/?MaQT={{a.MaQT}}">Khám phá</a></div>

                                <div class="media-body">
                                    <h5 class="mb-3 tentour"><a href="/DiemDen/QTCT/?MaQT={{a.MaQT}}"title="{{a.TenQT}}">{{a.TenQT}}</a></h5>
                                    <hr />
                                    <h3><b>{{a.Giasale | currency: "đ":false}}</b></h3>
                                    <h5 class="giagoc"><b>{{a.Giagoc | currency: "đ":false}}</b></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


           
        </div>
    </section>


</div>
