@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MenuAdmin.cshtml";
}
<script src="~/Areas/AngularScript/Tins/Tin.js"></script>
<script src="~/Scripts/dirPagination.js"></script>


<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-8 align-self-center">
                <h3 class="text-themecolor">
                    Quản lý Danh mục
                    <small>
                        <i class="ace-icon fa fa-angle-right"></i>
                        <a style="text-decoration: none" href="~/Tins/Index">Tin tức</a>
                    </small>
                </h3>
            </div>
        </div>

        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->

        <div ng-app="HTATravelApp" class="row">
            @Html.Hidden("MaTin_")
            <div ng-controller="TinsController" ng-init="GetAllData('')" class="card">
                <div class="card-body">
                    <div style="height: 50px;">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Thêm
                        </button>
                        <div class="col-md-10" style="float: right">
                            <div class="input-group">
                                <input class="col-md-6" style="height:34px" id="txtSearch" placeholder="Nhập từ khóa cần tìm" />
                                <input type="submit" value="Tìm kiếm" class="btn btn-success col-md-2" ng-click="GetAllData(document.getElementById('txtSearch').value.toString())" />
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table cellpadding="12" class="table-bordered table-hover table">

                            <tr>
                                <th>
                                    Mã
                                </th>
                                <th>
                                    Tiêu đề
                                </th>
                                <th>
                                    Ảnh 1
                                </th>
                                <th>
                                    Ảnh 2
                                </th>
                                <th>
                                    Ảnh 3
                                </th>
                                <th>
                                    Ảnh 4
                                </th>
                                <th>
                                    Ảnh 5
                                </th>
                                <th>
                                    Ngày đăng
                                </th>
                                <th>
                                    Nội dung
                                </th>
                                <th>
                                    Tùy chọn
                                </th>
                            </tr>

                            <tr ng-repeat="item in TinsList">
                                <td>
                                    {{item.MaTin}}
                                </td>
                                <td>
                                    {{item.Tieude}}
                                </td>
                                <td>
                                    <img style="height:50px; width: 50px" src="{{item.Anh1}}" />
                                </td>
                                <td>
                                    <img style="height:50px; width: 50px" src="{{item.Anh2}}" />
                                </td>
                                <td>
                                    <img style="height:50px; width: 50px" src="{{item.Anh3}}" />
                                </td>
                                <td>
                                    <img style="height:50px; width: 50px" src="{{item.Anh4}}" />
                                </td>
                                <td>
                                    <img style="height:50px; width: 50px" src="{{item.Anh5}}" />
                                </td>
                                <td>
                                    {{item.Ngaydang}}
                                </td>
                                <td>
                                    
                                </td>
                                
                                <td>
                                    <input type="button" class="btn btn-warning fa fa-pencil-square-o" value="Sửa" ng-click="UpdateData(item)" data-toggle="modal" data-target="#exampleModal" />
                                    <input type="button" class="btn btn-danger ace-icon fa fa-trash" value="Xóa" ng-click="DeleteData(item)" />
                                </td>
                            </tr>
                        </table>
                        <uib-pagination total-items="users.length" ng-model='currentPage' items-per-page='pageSize' boundary-links="true">
                        </uib-pagination>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content" style="width: 800px">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-horizontal" role="form">
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-md-8 col-lg-8 col-sm-8">
                                                        <div class="form-group">
                                                            <div class="col-md-12">
                                                                <input type="text" class="form-control" placeholder="Nhập tiêu đề" ng-model="Tieude_" />
                                                                <input type="text" class="form-control" placeholder="Hình ảnh 1" ng-model="Anh1_" />
                                                                <input type="text" class="form-control" placeholder="Hình ảnh 2" ng-model="Anh2_" />
                                                                <input type="text" class="form-control" placeholder="Hình ảnh 3" ng-model="Anh3_" />
                                                                <input type="text" class="form-control" placeholder="Hình ảnh 4" ng-model="Anh4_" />
                                                                <input type="text" class="form-control" placeholder="Hình ảnh 5" ng-model="Anh5_" />
                                                                <input type="date" class="form-control" placeholder="Ngày đăng" ng-model="Ngaydang_" />
                                                                <input type="number" class="form-control" placeholder="Lượt xem" ng-model="Luotxem_" />
                                                                <textarea cols="30" rows="10" class="form-control" placeholder="Nội dung" ng-model="Noidung_"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <input type="button" id="btnSave" class="btn btn-primary" value="Submit" ng-click="InsertData()" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

